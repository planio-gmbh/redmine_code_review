<% attachment = Attachment.find(params[:id]) %>
<% if attachment.is_text? or attachment.is_diff? %>

  <div id="code_review">
    <div id="review_comment"/>
  </div>

  <%= javascript_tag do %>
    $(document).ready(function(){
      $.get('<%= j update_attachment_view_code_review_path(project,
                 attachment_id: attachment, review_id: params[:review_id]) %>');
    });
  <% end %>

<% end %>
